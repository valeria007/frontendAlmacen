<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>Hospital</title>
<META NAME="ROBOTS" CONTENT="NOINDEX, NOFOLLOW">
<%- include("partials/head") -%>
</head>
<body class="light_theme  fixed_header left_nav_fixed">
<div class="wrapper">
    <%- include("partials/menu") -%>
  <!--\\\\\\\ wrapper Start \\\\\\-->
    <!--\\\\\\\left_nav end \\\\\\-->
    <div class="contentpanel">
      <!--\\\\\\\ contentpanel start\\\\\\-->
      <div class="pull-left breadcrumb_admin clear_both">
        <div class="pull-left page_title theme_color">
          <h1>Data Table</h1>
          <h2 class="">Subtitle goes here...</h2>
        </div>
        <div class="pull-right">
          <ol class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li><a href="#">TABLES</a></li>
            <li class="active">Data Table</li>
          </ol>
        </div>
      </div>

      <div class="container clear_both padding_fix">
        <!--\\\\\\\ container  start \\\\\\-->
      
      <div class="row">
                <div class="col-md-12">
                    <div class="block-web">
                        <div class="header">
                            <div class="actions"> <a class="minimize" href="#"><i class="fa fa-chevron-down"></i></a><a class="close-down" href="#"><i class="fa fa-times"></i></a> </div>
                            <h3 class="content-header">Nuevo Medicamento</h3>
                        </div>
                        <div class="porlets-content">
                        <% if (dataGRUPOa == null) {%>
                            <h1>Ocurrio un problema con el servidor por favor intenta volver a entrar en esta pagina desde una pestaña anterior</h1>
                        <% } else {%>	
                            <form  action="/medicamentos" method="POST" parsley-validate novalidate>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Grupo de Asignación:</label>
                                        <select  name="grupoAsig">
											<% for(var i=0; i< dataGRUPOa.length; i++) {%>
											<option><%=dataGRUPOa[i].descripcion%></option>
											<% } %>
										</select>
                                    </div>
                                    <div class="form-group">
                                        <label>Generico:</label>
                                        <input type="text" name="generico" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label>Presentacion:</label>
                                        <input type="text" name="presentacion" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label>Cantidad:</label>
                                        <input type="text" name="cantidad" class="form-control">
                                    </div>
                                </div>  
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Codificación:</label>
                                        <input type="text" name="codificacion" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label>Unidad de Medida:</label>
                                        <input type="text" name="unidadMedida" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label>Fecha de Llegada:</label>
                                        <input type="date" name="fechaLLEgada"class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label>Cantidad por Unidades:</label>
                                        <input type="text" name="unidades" class="form-control">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Nombre:</label>
                                        <input  type="text" name="nombre"  required class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label>Concentracion:</label>
                                        <input type="text" name="concentracion" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label>Fecha de Vencimiento:</label>
                                        <input type="date" name="fechaVencimiento" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label>Precio:</label>
                                        <input type="text" name="precio" class="form-control">
                                    </div>
                                </div>
                                    <button type="submit" class="btn btn-primary"><i class="fa fa-times"></i>  Guardar</button>
                                    <button class="btn btn-default"><i class="fa fa-floppy-o"></i> Cancelar</button>
                            </form>
                        <% } %>
                        </div>
                    </div>
                </div>
            </div><!--/row-->
      
       <div id="main-content">
    <div class="page-content">
    <div class="row">
        <div class="col-md-12">
          <div class="block-web">
           <div class="header">
              <div class="actions"> <a class="minimize" href="#"><i class="fa fa-chevron-down"></i></a> <a class="refresh" href="#"><i class="fa fa-repeat"></i></a> <a class="close-down" href="#"><i class="fa fa-times"></i></a> </div>
              <h3 class="content-header">Data Table</h3>
            </div>
         <div class="porlets-content">
            <div class="table-responsive">
                <table  class="display table table-bordered table-striped " id="dynamic-table">
                <thead>
                    <tr>
                    <th>#</th>
                    <th>Grupo de Asignación</th>
                    <th>Codificación</th>
                    <th>Nombre</th>
                    
                    <th>Presentacion</th>
                    <th>Fecha de Llegada</th>
                    <th>Fecha de Vencimiento</th>
                    <th>Cantidad</th>
                    <th>Cantidad Unid.</th>
                    <th>Precio</th>
                    <th class="hidden-phone">Opciones</th>
                </thead>
                <tbody>
                    <% for(var i=0; i < resp.length; i++) { %>
                    <tr>
                    <td><%= i+1%></td>
                    <td><%=resp[i].grupoAsig%></td>
                    <td><%=resp[i].codificacion%></td>
                    <td><%=resp[i].nombre%></td>
                   
                    <td><%=resp[i].presentacion%></td>
                    <td><%=resp[i].fechaLLEgada%></td>
                    <td><%=resp[i].fechaVencimiento%></td>
                    <td><%=resp[i].cantidad%></td>
                    <td><%=resp[i].unidades%></td>
                    <td><%=resp[i].precio%></td>
                    <td><a class="btn btn-success" href="/OnlyMedicamento/<%=resp[i].id%>"><i class="fa fa-refresh"></i> </a></td>
                    </tr>
                   <% } %>
                </tbody>
                </table>
              </div><!--/table-responsive-->
            </div><!--/porlets-content-->
            
            
          </div><!--/block-web--> 
        </div><!--/col-md-12--> 
      </div><!--/row-->
    
      
        </div><!--/page-content end--> 
  </div><!--/main-content end--> 
      
      
      
      </div>
      <!--\\\\\\\ container  end \\\\\\-->
    </div>
    <!--\\\\\\\ content panel end \\\\\\-->
  </div>
  <!--\\\\\\\ inner end\\\\\\-->
</div>
<!--\\\\\\\ wrapper end\\\\\\-->
<!-- Modal -->
<!-- /sidebar chats -->   


<!--Scripts-->
<%- include("partials/scripts") -%>

</body>
</html>



